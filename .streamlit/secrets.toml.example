# Streamlit Secrets Configuration Example
# Pour le déploiement sur Streamlit Cloud, ajoutez ces secrets dans les paramètres de l'app

# Apify API Token
APIFY_API_TOKEN = "your_apify_token_here"

# Google Sheets Configuration
GOOGLE_SHEET_ID = "your_google_sheet_id_here"

# GoHighLevel API (optionnel)
GOHIGHLEVEL_API_KEY = "your_gohighlevel_api_key_here"
GOHIGHLEVEL_LOCATION_ID = "your_location_id_here"

# Pour credentials.json, utilisez le format suivant:
# [gcp_service_account]
# type = "service_account"
# project_id = "your-project-id"
# private_key_id = "your-private-key-id"
# private_key = "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# client_email = "your-service-account@your-project.iam.gserviceaccount.com"
# client_id = "your-client-id"
# auth_uri = "https://accounts.google.com/o/oauth2/auth"
# token_uri = "https://oauth2.googleapis.com/token"
# auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
# client_x509_cert_url = "your-cert-url"
